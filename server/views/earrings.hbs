{{! Каталог серёг }}
<main class="main">
  <!-- Breadcrumbs -->
  <section class="breadcrumbs">
    <div class="breadcrumbs__container">
      <nav class="breadcrumbs__nav">
        <a href="/" class="breadcrumbs__link">Home</a>
        <span class="breadcrumbs__separator">/</span>
        <span class="breadcrumbs__current">Earrings</span>
      </nav>
    </div>
  </section>

  <!-- Page Header -->
  <section class="page-header">
    <div class="page-header__container">
      <h1 class="page-header__title">Earrings Catalog</h1>
      <p class="page-header__subtitle">
        Discover our collection of elegant earrings
      </p>
    </div>
  </section>

  <!-- Catalog -->
  <section class="catalog">
    <div class="catalog__container">
      <!-- Main Content -->
      <div class="catalog__main">
        <!-- Toolbar -->
        <div class="catalog__toolbar">
          <div class="catalog__results">
            Found
            <span class="catalog__count">{{total}}</span>
            earrings
          </div>
          <div class="catalog__controls">
            <form id="sortForm" method="get">
              <label class="sort__label">Sort by:</label>
              <select class="sort__select" name="sort" onchange="document.getElementById('sortForm').submit()">
                <option value="popular" {{#if (eq sort 'popular')}}selected{{/if}}>Popularity</option>
                <option value="price-asc" {{#if (eq sort 'price-asc')}}selected{{/if}}>Price (ascending)</option>
                <option value="price-desc" {{#if (eq sort 'price-desc')}}selected{{/if}}>Price (descending)</option>
                <option value="name" {{#if (eq sort 'name')}}selected{{/if}}>Name</option>
                <option value="new" {{#if (eq sort 'new')}}selected{{/if}}>New items</option>
              </select>
            </form>
            <div class="view-toggle">
              <button
                class="view-toggle__btn view-toggle__btn--active"
                data-view="grid"
              >
                <svg class="view-toggle__icon" viewBox="0 0 24 24">
                  <rect x="3" y="3" width="7" height="7" />
                  <rect x="14" y="3" width="7" height="7" />
                  <rect x="3" y="14" width="7" height="7" />
                  <rect x="14" y="14" width="7" height="7" />
                </svg>
              </button>
              <button class="view-toggle__btn" data-view="list">
                <svg class="view-toggle__icon" viewBox="0 0 24 24">
                  <line x1="8" y1="6" x2="21" y2="6" />
                  <line x1="8" y1="12" x2="21" y2="12" />
                  <line x1="8" y1="18" x2="21" y2="18" />
                  <line x1="3" y1="6" x2="3.01" y2="6" />
                  <line x1="3" y1="12" x2="3.01" y2="12" />
                  <line x1="3" y1="18" x2="3.01" y2="18" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Products Grid -->
        <div class="products-grid">
          {{#if products}}
            {{#each products}}
              {{> product-card this}}
            {{/each}}
          {{else}}
            <p>No earrings found.</p>
          {{/if}}
        </div>

        <!-- Pagination -->
        {{> pagination prevPage=prevPage hasPrev=hasPrev nextPage=nextPage hasNext=hasNext pages=pages}}
      </div>
    </div>
  </section>
</main>