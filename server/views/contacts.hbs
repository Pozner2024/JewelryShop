<main class="main">
  <section class="page-header">
    <div class="page-header__container">
      <h1 class="page-header__title">Contacts</h1>
      <p class="page-header__subtitle">Get in touch with us</p>
    </div>
  </section>
  <section class="content contacts-content">
    <div class="contacts-blocks">
      <div class="contacts-info">
        <h2>Contact Information</h2>
        <ul class="contacts-list">
          <li>
            <strong>Phone:</strong>
            <a href="tel:+74951234567">+7 (495) 123-45-67</a>
          </li>
          <li>
            <strong>Email:</strong>
            <a href="mailto:info@jewelry-store.ru">info@jewelry-store.ru</a>
          </li>
          <li><strong>Address:</strong> Moscow, Example St., 1</li>
          <li><strong>Working hours:</strong> Mon–Sun: 10:00–21:00</li>
        </ul>
        <div class="contacts-social">
          <a href="#" title="Facebook"><img
              src="images/facebook-icon.svg"
              alt="Facebook"
            /></a>
          <a href="#" title="Telegram"><img
              src="images/telegram-icon.svg"
              alt="Telegram"
            /></a>
        </div>
      </div>
      <div class="contacts-form-block">
        <h2>Contact Form</h2>
        <form class="contacts-form">
          <input type="text" name="name" placeholder="Your name" required />
          <input type="email" name="email" placeholder="Your email" required />
          <textarea
            name="message"
            placeholder="Your message"
            required
          ></textarea>
          <button type="submit">Send</button>
        </form>
      </div>
    </div>
    <div class="contacts-map">
      <h2>Our Location</h2>
      <iframe
        src="https://yandex.ru/map-widget/v1/?um=constructor%3A1b7e2e2e2e2e2e2e2e2e2e2e2e2e2e2e&amp;source=constructor"
        width="100%"
        height="320"
        frameborder="0"
      ></iframe>
    </div>
  </section>
