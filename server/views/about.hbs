<main class="main">
  <section class="breadcrumbs">
    <div class="breadcrumbs__container">
      <nav class="breadcrumbs__nav">
        <a href="/" class="breadcrumbs__link">Home</a>
        <span class="breadcrumbs__separator">/</span>
        <span class="breadcrumbs__current">About Us</span>
      </nav>
    </div>
  </section>
  <section class="about-content">
    <div id="about-content-display">
      {{{content}}}
    </div>

    <div id="about-content-editor" style="display: none;">
      <textarea id="about-content-textarea"></textarea>
    </div>

    {{#if isAdmin}}
      <div class="admin-edit-controls">
        <button id="edit-about-btn" class="btn btn-secondary">Edit</button>
        <button
          id="save-about-btn"
          class="btn btn-primary"
          style="display: none;"
        >Save</button>
        <button
          id="cancel-about-btn"
          class="btn btn-light"
          style="display: none;"
        >Cancel</button>
      </div>
    {{/if}}
  </section>
</main>