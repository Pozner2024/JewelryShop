<section class="breadcrumbs">
  <div class="breadcrumbs__container">
    <nav class="breadcrumbs__nav">
      <span class="breadcrumbs__current">Home</span>
    </nav>
  </div>
</section>

<!-- Main Content -->
<main class="main">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__container">
      <div class="hero__content">
        <h1 class="hero__title">Exclusive Jewelry</h1>
        <p class="hero__subtitle">
          Discover our collection of exquisite jewelry created by craftsmen with
          years of experience
        </p>
        <a href="/catalog" class="hero__cta button button--primary">
          View Catalog
        </a>
      </div>
      <div class="hero__image">
        <img src="images/hero-jewelry.jpg" alt="Jewelry" class="hero__img" />
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories">
    <div class="categories__container">
      <h2 class="categories__title">Product Categories</h2>
      <div class="categories__grid">
        <a href="/catalog/rings" class="category-card">
          <div class="category-card__image">
            <img
              src="images/rings.jpg"
              alt="Rings"
              class="category-card__img"
            />
          </div>
          <div class="category-card__content">
            <h3 class="category-card__title">Rings</h3>
            <p class="category-card__count">120+ items</p>
          </div>
        </a>
        <a href="/catalog/necklaces" class="category-card">
          <div class="category-card__image">
            <img
              src="images/necklaces.jpg"
              alt="Necklaces"
              class="category-card__img"
            />
          </div>
          <div class="category-card__content">
            <h3 class="category-card__title">Necklaces</h3>
            <p class="category-card__count">85+ items</p>
          </div>
        </a>
        <a href="/catalog/earrings" class="category-card">
          <div class="category-card__image">
            <img
              src="images/earrings.jpg"
              alt="Earrings"
              class="category-card__img"
            />
          </div>
          <div class="category-card__content">
            <h3 class="category-card__title">Earrings</h3>
            <p class="category-card__count">95+ items</p>
          </div>
        </a>
        <a href="/catalog/bracelets" class="category-card">
          <div class="category-card__image">
            <img
              src="images/bracelets.jpg"
              alt="Bracelets"
              class="category-card__img"
            />
          </div>
          <div class="category-card__content">
            <h3 class="category-card__title">Bracelets</h3>
            <p class="category-card__count">60+ items</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Visit Our Salons Section -->
  <section class="visit-salons">
    <div class="visit-salons__container">
      <p class="visit-salons__subtitle">Not sure what to choose?</p>
      <h2 class="visit-salons__title">Visit our stores in Warsaw</h2>
      <div class="visit-salons__desc">
        Discover the beauty of our exclusive jewelry collections in person. Our experienced consultants will help you find the perfect piece for any occasion. Visit our stores to enjoy personalized service, expert advice, and a unique shopping experience in the heart of Warsaw.
      </div>
      <a href="/contacts" class="visit-salons__btn button">Our Stores</a>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="featured">
    <div class="featured__container">
      <h2 class="featured__title">Featured Products</h2>
      <div class="featured__grid products-grid">
        {{#if featuredProducts}}
          {{#each featuredProducts}}
            {{> product-card this}}
          {{/each}}
        {{else}}
          <p>Could not load featured products at this time.</p>
        {{/if}}
      </div>
    </div>
  </section>
</main>