<!-- Authentication Modals -->
<div id="loginModal" class="modal">
  <div class="modal__content">
    <button id="closeLoginModal" class="modal__close">×</button>
    <h2>Sign In</h2>
    <form id="loginForm">
      <input
        type="text"
        name="loginOrEmail"
        placeholder="Login or Email"
        required
      />
      <div class="password-field">
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button
          type="button"
          id="loginPasswordToggle"
          class="password-toggle"
          tabindex="-1"
        ></button>
      </div>
      <div id="loginStatusMessage" class="status-message"></div>
      <button type="submit">Sign In</button>
    </form>
    <p>
      Don't have an account?
      <a href="#" id="showRegisterModal">Register</a>
    </p>
  </div>
</div>

<div id="registerModal" class="modal">
  <div class="modal__content">
    <button id="closeRegisterModal" class="modal__close">×</button>
    <h2>Register</h2>
    <form id="registerForm">
      <input type="text" name="login" placeholder="Login" required />
      <input type="email" name="email" placeholder="Email" required />
      <div class="password-field">
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
          pattern="\d{8}"
          title="Password must be exactly 8 digits"
        />
        <button
          type="button"
          id="registerPasswordToggle"
          class="password-toggle"
          tabindex="-1"
        ></button>
        <small class="form-hint">Password must be exactly 8 digits</small>
      </div>
      <div id="registerStatusMessage" class="status-message"></div>
      <button type="submit">Register</button>
    </form>
    <p>
      Already have an account?
      <a href="#" id="showLoginModal">Sign In</a>
    </p>
  </div>
</div>

<div id="userMenu" class="user-menu">
  <div class="user-menu__content">
    <span>Hello, <span id="usernameDisplay"></span>!</span>
    <button id="logoutBtn" class="user-menu__logout">Sign Out</button>
  </div>
</div>