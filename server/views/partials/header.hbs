<!-- Header -->
<header class="header">
  <div class="header__container">
    <div class="header__logo">
      <a href="/">
        <img src="/images/logo.svg" alt="Logo" class="header__logo-img" />
      </a>
    </div>
    <nav class="header__nav nav">
      <ul class="nav__list">
        <li class="nav__item">
          <a href="/catalog" class="nav__link {{#if isCatalogPage}}nav__link--active{{/if}}">Catalog</a>
        </li>
        <li class="nav__item">
          <a href="/about" class="nav__link {{#if isAboutPage}}nav__link--active{{/if}}">About Us</a>
        </li>
        <li class="nav__item">
          <a href="/contacts" class="nav__link {{#if isContactsPage}}nav__link--active{{/if}}">Contacts</a>
        </li>
      </ul>
    </nav>
    <div class="header__actions">
      <button class="header__search-btn">
        <img src="/images/search-icon.svg" alt="Search" class="header__icon" />
      </button>
      <button class="header__cart-btn">
        <img src="/images/cart-icon.svg" alt="Cart" class="header__icon" />
        <span class="header__cart-count">0</span>
      </button>
      <button class="header__profile-btn" id="profileBtn">
        <img
          src="/images/profile-icon.svg"
          alt="Profile"
          class="header__icon"
        />
      </button>
    </div>
  </div>
</header>