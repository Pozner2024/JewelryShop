{{! views/catalog.hbs (–æ—Ç—Ä—ã–≤–æ–∫ —Å –∫–∞—Ä—Ç–æ—á–∫–æ–π –ø—Ä–æ–¥—É–∫—Ç–∞) }}
<main class="main">
  <section class="catalog-header">
    <h1 class="catalog-title">{{pageTitle}}</h1>
    {{#if pageSubtitle}}
      <p class="catalog-subtitle">{{pageSubtitle}}</p>
    {{/if}}
    <div class="catalog-count">Total: {{productsCount}} items</div>
  </section>
  <div class="products-grid">
    {{#each products}}
      <div class="product-card" data-slug="{{slug}}">
        <div class="product-card__image-container">
          <img
            src="/images/{{image}}"
            alt="{{name}}"
            class="product-card__image"
          />
          <button class="product-card__wishlist">
            {{! —Ä–∞–Ω—å—à–µ –±—ã–ª _favorite }}
            <img
              src="/images/heart-icon.svg"
              alt="Wishlist"
              class="product-card__heart"
            />
          </button>
          {{#if badge}}
            <div
              class="product-card__badge product-card__badge--{{badgeType}}"
            >{{badge}}</div>
          {{/if}}
        </div>
        <div class="product-card__content">
          <h3 class="product-card__name">{{name}}</h3>
          <div class="product-card__meta">
            <span class="product-card__brand">{{brand}}</span>
            <span class="product-card__article">Art. {{article}}</span>
          </div>
          <div class="product-card__rating">
            <span class="rating">
              {{#times rating}}<span class="rating__star rating__star--filled">‚òÖ</span>{{/times}}
              {{#times (minus 5 rating)}}<span class="rating__star">‚òÖ</span>{{/times}}
            </span>
            <span class="rating__count">({{reviewsCount}})</span>
          </div>
          <div class="product-card__price-block">
            <span class="product-card__price">{{price}} ‚ÇΩ</span>
            {{#if oldPrice}}
              <span class="product-card__old-price">{{oldPrice}} ‚ÇΩ</span>
            {{/if}}
          </div>
          <div class="product-card__actions">
            <button class="product-card__add-to-cart" data-product-id="{{id}}">Add to Cart</button>
            <button class="product-card__quick-view">üëÅÔ∏è</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{#if pagination}}
  <div class="catalog-pagination">
    {{#if pagination.hasPrev}}
      <a href="#" class="pagination-prev">&laquo; Prev</a>
    {{/if}}
    {{#each pagination.pages}}
      <a href="#" class="pagination-page {{#if active}}active{{/if}}">{{number}}</a>
    {{/each}}
    {{#if pagination.hasNext}}
      <a href="#" class="pagination-next">Next &raquo;</a>
    {{/if}}
  </div>
  {{/if}}
</main>