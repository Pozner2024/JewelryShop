<main class="main">
  <!-- Breadcrumbs -->
  <section class="breadcrumbs">
    <div class="breadcrumbs__container">
      <nav class="breadcrumbs__nav">
        <a href="/" class="breadcrumbs__link">Home</a>
        <span class="breadcrumbs__separator">/</span>
        <span class="breadcrumbs__current">Catalog</span>
      </nav>
    </div>
  </section>

  <!-- Page Header -->
  <section class="page-header">
    <div class="page-header__container">
      <h1 class="page-header__title">Jewelry Catalog</h1>
      <p class="page-header__subtitle">
        Over 500 unique jewelry pieces in our collection
      </p>
    </div>
  </section>

  <!-- Catalog -->
  <section class="catalog">
    <div class="catalog__container">
      <!-- Main Content -->
      <div class="catalog__main">
        <!-- Toolbar -->
        <div class="catalog__toolbar">
          <div class="catalog__results">
            Found
            <span class="catalog__count">120</span>
            products
          </div>
          <div class="catalog__controls">
            <div class="sort">
              <label class="sort__label">Sort by:</label>
              <select class="sort__select">
                <option value="popular">Popularity</option>
                <option value="price-asc">Price (ascending)</option>
                <option value="price-desc">Price (descending)</option>
                <option value="name">Name</option>
                <option value="new">New items</option>
              </select>
            </div>
            <div class="view-toggle">
              <button
                class="view-toggle__btn view-toggle__btn--active"
                data-view="grid"
              >
                <svg class="view-toggle__icon" viewBox="0 0 24 24">
                  <rect x="3" y="3" width="7" height="7" />
                  <rect x="14" y="3" width="7" height="7" />
                  <rect x="3" y="14" width="7" height="7" />
                  <rect x="14" y="14" width="7" height="7" />
                </svg>
              </button>
              <button class="view-toggle__btn" data-view="list">
                <svg class="view-toggle__icon" viewBox="0 0 24 24">
                  <line x1="8" y1="6" x2="21" y2="6" />
                  <line x1="8" y1="12" x2="21" y2="12" />
                  <line x1="8" y1="18" x2="21" y2="18" />
                  <line x1="3" y1="6" x2="3.01" y2="6" />
                  <line x1="3" y1="12" x2="3.01" y2="12" />
                  <line x1="3" y1="18" x2="3.01" y2="18" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Products Grid -->
        <div class="products-grid">
          {{#if products}}
            {{#each products}}
              {{> product-card this}}
            {{/each}}
          {{else}}
            <p>No products found.</p>
          {{/if}}
        </div>

        <!-- Pagination -->
        <div class="pagination">
          <button class="pagination__btn pagination__btn--prev" disabled>
            <svg class="pagination__icon" viewBox="0 0 24 24">
              <polyline points="15,18 9,12 15,6"></polyline>
            </svg>
            Previous
          </button>
          <div class="pagination__pages">
            <button class="pagination__page pagination__page--active">
              1
            </button>
            <button class="pagination__page">2</button>
            <button class="pagination__page">3</button>
            <span class="pagination__dots">...</span>
            <button class="pagination__page">10</button>
          </div>
          <button class="pagination__btn pagination__btn--next">
            Next
            <svg class="pagination__icon" viewBox="0 0 24 24">
              <polyline points="9,18 15,12 9,6"></polyline>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>
</main>