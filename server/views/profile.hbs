<div class="profile-container">
  <h1>My Profile</h1>
  <div class="profile-info">
    <p><strong>Username:</strong> {{user.login}}</p>
    <p><strong>Email:</strong> {{user.user_email}}</p>
    <p><strong>Role:</strong> {{user.role}}</p>
  </div>
  <div class="profile-actions">
    <a href="/api/users/logout" class="btn btn-primary">Sign Out</a>
  </div>

  <hr class="profile-divider">

  {{#if users}}
  {{! Admin View }}
  <div class="admin-dashboard">
    <div class="admin-nav">
      <button class="admin-nav-btn active" data-target="users-section">Users</button>
      <button class="admin-nav-btn" data-target="products-section">Products</button>
      <button class="admin-nav-btn" data-target="sales-section">Sales</button>
    </div>

    <div id="users-section" class="admin-section">
      <h3>All Users</h3>
      <table class="admin-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Email</th>
            <th>Role</th>
            <th>Active</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.login}}</td>
            <td>{{this.user_email}}</td>
            <td>{{this.role}}</td>
            <td>{{this.is_active}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div id="products-section" class="admin-section" style="display: none;">
      <h3>All Products</h3>
      <table class="admin-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Brand</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.brand}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div id="sales-section" class="admin-section" style="display: none;">
      <h3>Sales</h3>
      {{#if purchases.length}}
        <table class="admin-table">
          <thead>
            <tr>
              <th>User</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            {{#each purchases}}
              <tr>
                <td>{{this.user_login}}</td>
                <td>{{this.product_name}}</td>
                <td>{{this.quantity}}</td>
                <td>${{this.product_price}}</td>
                <td>{{this.purchased_at}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p>No sales yet.</p>
      {{/if}}
    </div>
  </div>
  {{else}}
  {{! Regular User View }}
  <div class="liked-products-container">
    <h2>Favorite Products</h2>
    <div id="liked-products-grid" class="products-grid">
      {{#if likedProducts}}
        {{#each likedProducts}}
          {{> product-card this showRemoveButton=true}}
        {{/each}}
      {{else}}
        <p>You haven't liked any products yet.</p>
      {{/if}}
    </div>
  </div>
  {{/if}}
</div>